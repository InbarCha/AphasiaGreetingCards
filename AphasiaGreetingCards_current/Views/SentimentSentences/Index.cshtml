@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@model IEnumerable<AphasiaGreetingCards.Models.SentimentSentence>

@{
    ViewData["Title"] = "Index";
}

<div class="Page">
    <div class="display-4 text-center"> Sentiment Sentences </div>
    <hr/>
    @if (SignInManager.IsSignedIn(User))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary text">Create New</a>
        </p>
    }
    else
    {
        <div class="container">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                To Create New
            </button>

            <!-- The Modal -->
            <div class="modal fade" id="myModal">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">You must be logged in!</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            To create a new sentiment sentence, you must be logged in.
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <br />
    }

    <div class="card shadow-lg">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.theme)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prefix)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.recipientUserFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.suffix)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.complexity)
                    </th>
                    <th>
                        Full Sentence
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.theme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prefix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.recipientUserFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.suffix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.complexity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prefix), @Html.DisplayFor(omdelItem => item.recipientUserFirstName)! @Html.DisplayFor(modelItem => item.suffix)
                    </td>
                    <td>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-primary">Delete</a>
                        }
                        else
                        {
                            <div>
                                To Edit|Details|Delete you must be logged in
                            </div>
                        }

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>