@model IEnumerable<AphasiaGreetingCards.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<div class="Page">
    <div class="display-4 text-center"> Images </div>
    <hr />
    <div class="text-center">
        <button type="button" class="btn btn-primary btnToggleSearch"> Search Form </button>
    </div>
    <div class="searhFormForGreetingCard">
        <form asp-action="search" class="col-md-4 offset-md-4">
            <div class="form-group">
                <label class="control-label">Image Name</label>
                <input class="form-control" name="imageName" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Theme</label>
                <select class="form-control" name="theme">
                    <option value="Birthday">Birthday</option>
                    <option value="Bar Mitzva">Bar Mitzva</option>
                    <option value="It's a boy!">It's a boy!</option>
                    <option value="Daily">Daily</option>
                    <option value="It's a girl!">It's a girl!</option>
                    <option value="Holiday">Holiday</option>
                    <option value="Love">Love</option>
                    <option value="Valentine">Valentine</option>
                    <option value="Wedding">Wedding</option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Resolution</label>
                <select class="form-control" name="resolution">
                    <option value="Complex">Complex</option>
                    <option value="Simple">Simple</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <a href="/Images" class="btn btn-primary text-center"> Full List </a>
    <div class="card shadow-lg">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.imageName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.theme)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resolution)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.digitalSize)
                    </th>
                    <th>
                        Image
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.imageName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.theme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resolution)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.digitalSize)KB
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.imagePath)" width="300">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>