@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@model AphasiaGreetingCards.Models.GreetingCard

@if (SignInManager.IsSignedIn(User))
{
    ViewData["Title"] = "Delete";

    <div class="display-4 text-center">Are you sure you want to delete this?</div>
    <hr />
    <div class="col-md-4 offset-md-4">
        <dl class="dl-horizontal col-md-4 offset-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.theme)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.theme)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.senderUserFullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.senderUserFullName)
            </dd>
            <dt>
                Recipient
            </dt>
            <dd>
                @Html.DisplayFor(model => model.recipientUserFullName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.fullSentence)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.fullSentence)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.image)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.image)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.publishedToFacebook)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.publishedToFacebook)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-primary" /> 
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
}
else
{
    <div class="display-3 text-center">
        You must be logged in to delete a greeting card. <br />
        <a href="/GreetingCards" class="btn btn-primary"> Back to Greeting Cards List </a>
    </div>
}