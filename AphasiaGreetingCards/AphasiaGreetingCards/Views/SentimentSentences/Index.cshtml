@model IEnumerable<AphasiaGreetingCards.Models.SentimentSentence>

@{
    ViewData["Title"] = "Index";
}

<div class="Page">
    <p>
        <a asp-action="Create" class="btn btn-primary text">Create New</a>
    </p>
    <div class="card shadow-lg">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.theme)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prefix)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.recipientUserFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.suffix)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.complexity)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.theme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prefix)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.recipientUserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.suffix)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.complexity)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>