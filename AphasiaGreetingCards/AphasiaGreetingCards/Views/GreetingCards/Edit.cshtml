@model AphasiaGreetingCards.Models.GreetingCard

@{
    ViewData["Title"] = "Edit";
}

<div class="Page">
    <h4>GreetingCard</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="theme" class="control-label"></label>
                    <input asp-for="theme" class="form-control" />
                    <span asp-validation-for="theme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sendertUserID" class="control-label"></label>
                    <input asp-for="sendertUserID" class="form-control" />
                    <span asp-validation-for="sendertUserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="recipientUserID" class="control-label"></label>
                    <input asp-for="recipientUserID" class="form-control" />
                    <span asp-validation-for="recipientUserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sentenceID" class="control-label"></label>
                    <input asp-for="sentenceID" class="form-control" />
                    <span asp-validation-for="sentenceID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imageID" class="control-label"></label>
                    <input asp-for="imageID" class="form-control" />
                    <span asp-validation-for="imageID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="publishedToFacebook" /> @Html.DisplayNameFor(model => model.publishedToFacebook)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


